//You need to also change connectionString in Program.cs
//connectionString = "server=localhost;database=parkinglot1;uid=root;pwd=password;";
//adjust above to match your system configuration in MySQL

CREATE DATABASE parkingslot1;

CREATE TABLE ParkingEvents (
    id INT AUTO_INCREMENT PRIMARY KEY,
    slotNumber INT,
    fullName VARCHAR(255),
    vehicleType VARCHAR(255),
    vehicleNumber VARCHAR(255) UNIQUE,
    entryTime DATETIME,
    exitTime DATETIME,
    duration TIME,
    totalCost DECIMAL(10, 2),
    isPaid BOOLEAN
);


//May be replaced by parkingevent unless it becomes a table specifically for logging
CREATE TABLE ParkingReceipts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    fullName VARCHAR(255),
    vehicleType VARCHAR(255),
    vehicleNumber VARCHAR(255),
    entryTime DATETIME,
    exitTime DATETIME,
    duration TIME,
    totalCost DOUBLE
);
