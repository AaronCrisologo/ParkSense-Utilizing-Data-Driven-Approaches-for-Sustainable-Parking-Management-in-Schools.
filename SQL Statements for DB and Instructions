//adjust above to match your system configuration in MySQL

CREATE DATABASE parkingslot1;

CREATE TABLE ParkingEvents (
    parkingSlot INT AUTO_INCREMENT PRIMARY KEY,
    isOccupied BOOLEAN,
    fullName VARCHAR(255),
    vehicleType VARCHAR(255),
    vehicleNumber VARCHAR(255) UNIQUE,
    entryTime DATETIME
);

INSERT INTO ParkingEvents (isOccupied, fullName, vehicleType, vehicleNumber, entryTime) VALUES
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL),
(NULL, NULL, NULL, NULL, NULL);


CREATE TABLE ParkingReceipts (
    receiptId INT AUTO_INCREMENT PRIMARY KEY,
    parkingSlot INT,
    fullName VARCHAR(255),
    vehicleType VARCHAR(255),
    vehicleNumber VARCHAR(255),
    entryTime DATETIME,
    exitTime DATETIME,
    duration TIME,
    totalCost DOUBLE
);
